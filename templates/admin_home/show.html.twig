{% extends 'base-backend.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <h1>Home</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ home.id }}</td>
            </tr>
            <tr>
                <th>Is_active</th>
                <td>{{ home.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ home.titre }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ home.texte }}</td>
            </tr>
            <tr>
                <th>Image_name</th>
                <td>{{ home.imageName }}</td>
            </tr>
            <tr>
                <th>Validite_debut</th>
                <td>{{ home.validiteDebut ? home.validiteDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Validite_fin</th>
                <td>{{ home.validiteFin ? home.validiteFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ home.logo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_home_index') }}">back to list</a>

    <a href="{{ path('app_admin_home_edit', {'id': home.id}) }}"class= "btn btn-dark">Modifier</a>

    {{ include('admin_home/_delete_form.html.twig') }}
{% endblock %}
