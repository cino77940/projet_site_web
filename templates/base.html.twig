    <body>
<section>
<nav class="navbar navbar-expand-lg bg-black">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_home') }}"><img src="{{ asset('images/ASFM.gif')}}" class="logo bounce" alt="Logo"></a>
        <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon text-light"></span>
        </button>
        
            <div class="collapse navbar-collapse" id="navbarNav">
            
                <ul class="navbar-nav w-100 justify-content-center">

                    <li class="nav-item p-3">
                        <a href="{{path('app_categorie_all')}}" class="text-light"><h1 class="h1textSize bounce">Projet ?</h1></a>
                    </li>

                    <li class="nav-item p-3">
                        <a href="{{path('app_location')}}" class="text-light"><h1 class="h1textSize bounce">Location ?</h1></a>
                    </li>

                    <li class="nav-item p-3">
                        <a href="{{path('app_missions')}}" class="text-light"><h1 class="h1textSize bounce">Compétent ?</h1></a>
                    </li>

                </ul>
                <ul class="navbar-nav">
                {% if is_granted('ROLE_USER') %}
                
                    <li class="nav-item">
                        <a class="h1 me-5 text-light" href="{{ path('app_user') }}"><i data-feather="user"></i></a>
                    </li>
                
                    <li class="nav-item" >
                        <a class="h1 me-5 text-light" href="{{ path('app_logout') }}"><i data-feather="log-out"></i></a>
                    </li>
                    {% else %}

                    <li class="nav-item">
                        <a class="h1 me-5 text-light" href="{{ path('app_register') }}"><i data-feather="user-plus"></i></a>
                    </li>

                    <li class="nav-item">
                        <a class="h1 me-5 text-light" href="{{ path('app_login') }}"><i data-feather="log-in"></i></a>
                    </li>
                
                {% endif %}
                
                </ul>
            </div>
            
                
    </div>
</nav>
</section>


