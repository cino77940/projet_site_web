{% extends 'base-backend.html.twig' %}
{% block title %}Services{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1>Services</h1>
    <a href="{{ path('app_admin_services_new') }}" class="btn btn-dark">Nouveau</a>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image_name</th>
                <th>Description</th>
                <th>Type</th>
                <th>Produit</th>
                {# <th>Updated_at</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.nom }}</td>
                <td>{{ service.imageName }}</td>
                <td>{{ service.description }}</td>
                <td>{{ service.type }}</td>
                <td>{{ service.produit }}</td>
                {# <td>{{ service.updatedAt ? service.updatedAt|date('Y-m-d H:i:s') : '' }}</td> #}
                <td>
                    <a href="{{ path('app_admin_services_show', {'id': service.id}) }}"class= "btn btn-dark">Afficher</a>
                    <a href="{{ path('app_admin_services_edit', {'id': service.id}) }}"class= "btn btn-dark">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}
