{% extends 'base-backend.html.twig' %}
{% block title %}Services{% endblock %}

{% block body %}
    <h1>Services</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ service.nom }}</td>
            </tr>
            <tr>
                <th>Image_name</th>
                <td>{{ service.imageName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ service.type }}</td>
            </tr>
            <tr>
                <th>Produit</th>
                <td>{{ service.produit }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ service.updatedAt ? service.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_services_index') }}">back to list</a>

    <a href="{{ path('app_admin_services_edit', {'id': service.id}) }}"class= "btn btn-dark">Modifier</a>

    {{ include('admin_services/_delete_form.html.twig') }}
{% endblock %}
