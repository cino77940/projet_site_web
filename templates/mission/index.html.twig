{% extends 'base.html.twig' %}

{% block title %}Missions{% endblock %}

{% block body %}

<div class="text-center mt-3">
    <h1>Mission impossible ? pas pour toi !</h1>
</div>

<div class="text-center mt-3">
    <h3>Les missions autours de chez toi</h3>
</div>

<section class="container">
   <div class="row col-6 justify-content-center">
        <h4 class="col-6 mt-5">Les missions</h4>
            {% for mission in missions %}
            <div class="col-8 text-center mt-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ mission.nom }}</h5>
                        <p class="card-text">{{ mission.description }}</p>
                        <a href="{{ path('app_mission_show', {'id': mission.id}) }}" class="btn btn-dark">Voir</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</section>

{% endblock %}
