{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    {% for flash_success in app.flashes('verify_email_success') %}
        <div class="alert alert-success" role="alert">{{ flash_success }}</div>
    {% endfor %}

    <section class="container col-lg-4 col-md-6 col-sm-8">
        <h1 class="mt-3 text-center">Inscription</h1>
        <div class="container text">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.nom)}}
            {{ form_row(registrationForm.prenom)}}
            {{ form_row(registrationForm.pseudo)}}
            {{ form_row(registrationForm.adresse)}}
            {{ form_row(registrationForm.ville)}}
            {{ form_row(registrationForm.pays)}}
            {{ form_row(registrationForm.description)}}
            {{ form_row(registrationForm.genre)}}
            {{ form_row(registrationForm.code_postal)}}
            {{ form_row(registrationForm.date_de_naissance)}}
            {{ form_row(registrationForm.numero_mobile)}}
        
            {{ form_row(registrationForm.agreeTerms, {
                label: 'J\'accepte les conditions d\'utilisation'
            }) }}

            <button type="submit" class="btn btn-dark my-3">S'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </section>
{% endblock %}
